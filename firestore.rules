rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is gaining access to their own data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is an admin
    // Note: This relies on the 'role' field in the user document, which requires a get() call.
    // For cleaner security, Custom Claims are better, but for this mock-migration, we check the doc.
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    // --- Users Collection ---
    // Anyone can read (needed for checking profiles), or restrict to auth if preferred.
    // Users can create/update ONLY their own profile.
    match /users/{userId} {
      allow read: if isAuthenticated();
      // Allow create if auth uid matches document id (new registration) OR if admin
      allow create: if isOwner(userId) || isAdmin();
      // Allow update if owner OR admin
      allow update, delete: if isOwner(userId) || isAdmin();
    }

    function isClubAdminOf(clubId) {
      let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
      return isAuthenticated() && userData.role == "club_admin" && userData.managedClubId == clubId;
    }

    // --- Clubs Collection ---
    // Public read, Admin write, Club Admin update own
    match /clubs/{clubId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isAdmin() || isClubAdminOf(clubId);
    }

    // --- Events Collection ---
    // Public read, Admin write, Club Admin can manage events for their club
    match /events/{eventId} {
      allow read: if true;
      allow create: if isAdmin();
      allow update, delete: if isAdmin() || (isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "club_admin" && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.managedClubId == resource.data.clubId);
    }

    // --- Registrations Collection ---
    // Users can read/write their own registrations. Admins can read/write all. Club admins can read/update registrations for events of their club.
    match /registrations/{regId} {
      function isClubAdminForEvent() {
        let userData = get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
        let eventData = get(/databases/$(database)/documents/events/$(resource.data.eventId)).data;
        return userData.role == "club_admin" && userData.managedClubId == eventData.clubId;
      }
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid || isAdmin() || isClubAdminForEvent());
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && (isAdmin() || isClubAdminForEvent() || resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();
    }

    // --- Venues & Slots ---
    match /venues/{venueId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    match /venue_slots/{slotId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // --- Notifications ---
    match /notifications/{notifId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
